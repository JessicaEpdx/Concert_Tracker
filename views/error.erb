<h1 id="head_text">Oops!</h1>

  <div class="row" style="margin-top:30px;">

    <div class="col-sm-3">
      <form action="/bands/form" method="get">
          <button type="submit" class="btn btn-warning" >Add a Band</button>
      </form>
    </div>

    <div class="col-sm-3">
      <form action="/bands" method="get">
          <button type="submit" class="btn btn-info">Find a Band</button>
      </form>
    </div>

    <div class="col-sm-3">
      <form action="/venues/form" method="get">
          <button type="submit" class="btn btn-warning">Add a Venue</button>
      </form>
    </div>

    <div class="col-sm-3">
      <form action="/venues" method="get">
          <button type="submit" class="btn btn-info">Venue List</button>
      </form>
    </div>

  </div>
</div>

<%if @new_band.!=(nil) %>
  <% @new_band.errors().full_messages().each do |message| %>
  <h2 style="color:white;">  <%= message%></h2>
  <h3 style="color:white;"> Please try again </h3>
  <% end %>
<% end %>

<%if @venue.!=(nil) %>
  <% @venue.errors().full_messages().each do |message| %>
  <h2 style="color:white;">  <%= message%></h2>
  <h3 style="color:white;"> Please try again </h3>
  <% end %>
<% end %>
